<Window x:Class="DemoExamWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoExamWPF"
        mc:Ignorable="d"
        Title="OOO &quot;ПОВАРЁНОК&quot;" Height="450" Width="800" MinWidth="800" MinHeight="450" Icon="/Resources/icon.ico">

    <DockPanel LastChildFill="True">
        <DockPanel x:Name="Header" DockPanel.Dock="Top" Background="#FFFFCC99">
            <Image Source="/Resources/logo.png" Margin="10,10,10,10" Height="100"/>

            <TextBlock
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="36"
                       FontWeight="Bold"
                       FontFamily="Comic Sans MS">
                ООО "ПОВАРЁНОК"
            </TextBlock>
        </DockPanel>
        <DockPanel LastChildFill="False" DockPanel.Dock="Bottom" Background="#FFFFCC99">
            <Button Content="Выйти" FontSize="26" Margin="15" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Background="#FFCC6600" Foreground="#FFF3F3F3"/>
        </DockPanel>
        <ContentControl Width="798" Background="White"/>
   
    </DockPanel>
</Window>
